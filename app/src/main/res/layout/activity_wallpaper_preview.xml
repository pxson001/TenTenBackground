<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gokustudio.tentenbackground.WallpaperPreviewActivity">

    <com.flaviofaria.kenburnsview.KenBurnsView
        android:id="@+id/wallpaper_activity_iv_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar">
    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="10dp">

        <Button
            android:id="@+id/wallpaper_activity_btn_set_wallpaper"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="Set wallpaper" />


        <Button
            android:id="@+id/wallpaper_activity_btn_download_wallpapaer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="Download" />
    </LinearLayout>
</FrameLayout>
